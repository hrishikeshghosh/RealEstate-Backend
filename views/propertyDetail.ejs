            <div id="formDiv" class="hidden bg-white rounded-lg shadow-md p-6 mb-6">
                <form action="/properties/<%= property._id %>/edit" method="post" enctype="multipart/form-data">
                    <div class="mb-4">
                        <label for="title" class="block text-sm font-medium text-gray-700">Property Title</label>
                        <input id="title"   value="<%= property.title %>" type="text" name="title"
                            class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500 p-2">
                    </div>
                    <div class="mb-4">
                        <label for="price" class="block text-sm font-medium text-gray-700">Property Value (AED)</label>
                        <input id="price"  value="<%= property.price %>" type="number" name="price"
                            class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500 p-2">
                    </div>
                    <div class="mb-4">
                        <label for="location" class="block text-sm font-medium text-gray-700">Location</label>
                        <input id="location" value="<%= property.location %>" type="text" name="location"
                            class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500 p-2">
                    </div>
                    <div class="mb-4">
                        <label for="mainCategory" class="block text-sm font-medium text-gray-700">Category</label>
                        <select id="mainCategory" name="mainCategory"
                            class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500 p-2">
                            <option id="mainCategory" value=""> select property category</option>
                            <option value="Residential">Residential</option>
                            <option value="Commercial">Commercial</option>
                            <option value="OffPlan">Off Plan</option>
                        </select>
                    </div>
                    <div class="mb-4">
                        <label for="subCategory" class="block text-sm font-medium text-gray-700">Type</label>
                        <select id="subCategory" name="subCategory"
                            class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500 p-2">
                            <option id="subCategory" value="">Select SubCategory</option>
                        </select>
                    </div>
                    <div class="mb-4 grid grid-cols-2 gap-4">
                        <div>
                            <label for="area"  value="<%= property.area %>"  class="block text-sm font-medium text-gray-700">Area (in sqft)</label>
                            <input id="area" type="number" name="area"
                                class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500 p-2">
                        </div>
                        <div>
                            <label for="bedrooms" class="block text-sm font-medium text-gray-700"   value="<%= property.bedrooms %>">No. of Bedrooms</label>
                            <input id="bedrooms" type="number" name="bedrooms"
                                class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500 p-2">
                        </div>
                    </div>
                    <div class="mb-4">
                        <label for="images" class="block text-sm font-medium text-gray-700" >Upload Image</label>
                        <input id="images" type="file" name="Images"  multiple
                            class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500 p-2">
                    </div>
                    <div class="text-right">
                        <button type="submit"
                            class="bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600 focus:ring focus:ring-blue-300">
                            Submit
                        </button>
                    </div>
                </form>
            </div>

        </div>
        <button 
        onclick="confirmDelete('<%= property._id %>')"
        class="bg-red-500 text-white px-4 py-2 rounded-md relative bottom-16 left-[24vw] mt-4 hover:bg-red-600 focus:ring focus:ring-red-300">
            Delete Property</button>
    </div>

    <!-- JavaScript -->
    <script>

 // Function to handle delete confirmation
 function confirmDelete(id) {
      const confirmed = confirm("Are you sure you want to delete this property?");
      if (confirmed) {
        // Redirect to the delete route
        window.location.href = `/properties/delete/${id}`;
      }
    }

        // Toggle Form Visibility
        document.getElementById('editPropertyBtn').addEventListener('click', function () {
            const formDiv = document.getElementById('formDiv');
            formDiv.classList.toggle('hidden');
        });

        // Change the main image when a thumbnail is clicked
        function changeMainImage(imageSrc) {
            document.getElementById('mainImage').src = imageSrc;
        }

